# Database Configuration
DB_URL=jdbc:h2:file:./build/cdn_db;CASE_INSENSITIVE_IDENTIFIERS=TRUE
DB_USER=root
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_very_secure_random_string_at_least_32_chars
JWT_ISSUER=anaphygon-cdn
JWT_AUDIENCE=anaphygon-cdn-users
JWT_EXPIRATION_MS=86400000

# File Storage
UPLOADS_DIR=uploads
MAX_FILE_SIZE=10485760

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,https://yourdomain.com

# Password Policy
MIN_PASSWORD_LENGTH=10
REQUIRE_SPECIAL_CHARS=true
REQUIRE_NUMBERS=true
REQUIRE_UPPERCASE=true

# Account Lockout
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30